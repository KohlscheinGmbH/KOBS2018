{% extends 'base.html.twig' %}

{% block title %}Artikel bearbeiten{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 1500px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code { background: #F5F5F5; padding: 2px 6px; }
	.vl { border-left: 1px solid gray; height: 430px; }
</style>
{{ form_start(form) }}
<div class="wrapper">
	<div class="form-group row" style="position:relative; top:15px;">
		<div class="col-sm-5">
				{{ form_row(form.bezeichnung1) }}
				{{ form_row(form.bezeichnung2) }}					
				{{ form_row(form.artikelnummer) }}
				{{ form_row(form.vpebezeichnung) }}
				{{ form_row(form.ean) }}
		</div>	
		<div class="vl"> 
			<!-- Vertikale Trennung --> 
		</div> 
		<div class="col-sm-3">
				{{ form_row(form.listenpreis) }}
				{{ form_row(form.ekdurch) }}
				{{ form_row(form.mindestbestand) }}	
				{{ form_row(form.bestand) }}	
				{{ form_row(form.mindestbestellmenge) }}
		</div>
		<div class="text-center col-sm-3">
			<div class="form-group row" style=" background: #FBF2EF; height: 300px; border: 1px solid #d4d4d4; border-radius: 4px;">
			<!-- Hier Bild einfügen -->
			</div>
			<div class="form-group row">
				<div class="btn-group btn-group-sm" role="group" aria-label="Basic example">	
				  <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#speichern"><i class="material-icons" style="vertical-align: text-top;">save</i>Speichern</button>				
				  <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#loeschen"><i class="material-icons" style="vertical-align: text-top;">delete</i>Löschen</button>
				  <a href="javascript:self.print()"	class="btn btn-danger"><i class="material-icons" style="vertical-align: text-top;">print</i> Drucken</a>
				  <button type="button" class="btn btn-danger"><i class="material-icons" style="vertical-align: text-top;">perm_media</i> Bild ändern</button>
				</div>
			</div>		
		</div>
	</div>

	<nav>
	  <div class="nav nav-tabs" id="nav-tab" role="tablist">
		<a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Grunddaten</a>
		<a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Lager</a>
		<a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Historie</a>
	  </div>
	</nav>
	<div class="tab-content" id="nav-tabContent">
		<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab"> 
			{% include('artikel/grunddaten.html.twig') %}
		</div>
		<div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
			{% include('artikel/lager.html.twig') %}
		</div>
		<div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
			{% include('artikel/historie.html.twig') %}
		</div>
	</div>
	<div class="modal fade" id="loeschen" role="dialog"> <!-- Lösch-Abfrage -->
		<div class="modal-dialog">  
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body">
			  <p1>Sind Sie sicher, dass sie diesen Artikel unwiederuflich löschen wollen?</p1>
			</div>
			<div class="modal-footer">
			  {{ form_row(form.loeschen) }}
			  <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-bottom: 15px;">Close</button>
			</div>
		  </div>
		</div>
	</div>
	<div class="modal fade" id="speichern" role="dialog"> <!-- Speicher-Abfrage -->
		<div class="modal-dialog">  
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body">
			  <p1>Möchten Sie wirklich Speichern?</p1>
			</div>
			<div class="modal-footer">
			  {{ form_row(form.speichern) }}
			  <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-bottom: 15px;">Close</button>
			</div>
		  </div>      
		</div>
	</div>
</div>
{{ form_end(form) }}
{% endblock %}
