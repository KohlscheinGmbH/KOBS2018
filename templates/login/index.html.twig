<!DOCTYPE html>
<html>
	{% block head_css %}
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	{% endblock %}
	{% block head_js %}
		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	{% endblock %}
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Anmeldung{% endblock %}</title>
		{% block stylesheets %}{% endblock %}
	</head>
	<style>
		.example-wrapper { margin: 1em auto; max-width: 1700px; width: 95%; font: 18px/1.5 sans-serif; }
		.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }		
	</style>
	<body>
		<div>
			<h1 style="position:relative;top:15px;" align="center">Willkommen bei KOBS</h1>
			</br><hr/>
		</div>
		<div class="form-group row" style="position:relative;top:90px;">
			<div class="col-sm-5"></div>				
			<div class="col-sm-2" style="background: #FBF2EF;height: 315px;border: 1px solid #d4d4d4;  border-radius: 4px;">
				<h1 style="text-align: center;">Anmelden</h1>
				<hr/>
				<form action="{{ path('login') }}" method="post">
					<label for="username">Benutzername:</label>
					<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
					<label for="password">Passwort:</label>
					<input class="form-control" type="password" id="password" name="_password" style="margin-bottom:1.5em; width:100%;"/>
					<input type="hidden" name="_target_path" value="/menu" />
					<hr/>
					<a class="btn btn-secondary btn active" href="register" role="button">Registrieren</a>
					<button type="submit" class="btn btn-primary">Anmelden</button>
				</form>
				{% if error %}
					<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}	
			</div>							
			<div class="col-sm-4"></div>							
		</div>
	</body>
</html>